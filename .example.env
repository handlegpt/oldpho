# Replicate API Key (必需)
REPLICATE_API_KEY=

# NextAuth 配置 (必需)
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=

# Google OAuth (可选，用于用户登录)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# 数据库配置 (Docker 自动设置，可自定义密码)
POSTGRES_PASSWORD=ophoto_password_2024
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD:-ophoto_password_2024}@db:5432/ophoto
SHADOW_DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD:-ophoto_password_2024}@db:5432/ophoto_shadow

# Redis 配置 (可选，用于速率限制)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# 上传配置 (可选)
NEXT_PUBLIC_UPLOAD_API_KEY=

# 应用配置
NODE_ENV=development
PORT=3001
